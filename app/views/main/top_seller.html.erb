<h1>Top Seller</h1>

<table id="qty" class="table table-dark table-hover">
<thead>
    <th>Seller</th>
    <th>qty</th>
</thead>
<tbody>
    <% @inventory.each do |inv| %>
        <tr>
            <td><%= User.where(id:inv[0]).first.name %></td>
            <td><%= inv[1] %></td>
        </tr>
    <%end%>
</tbody>
</table>

<table id="price" class="table table-dark table-hover">
<thead>
    <th>Seller</th>
    <th>Income</th>
</thead>
<tbody>
    <% @inventory2.each do |inv| %>
        <tr>
            <td><%= User.where(id:inv[0]).first.name %></td>
            <td><%= inv[1] %></td>
        </tr>
    <%end%>
</tbody>
</table>

<script>
$(document).ready(function () {
            $('#qty,#price').DataTable({
                order: [[1, 'desc']],
            })
});
</script>
