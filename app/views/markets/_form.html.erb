<%= form_with(model: market) do |form| %>
  <% if market.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(market.errors.count, "error") %> prohibited this market from being saved:</h2>

      <ul>
        <% market.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
  <% if session[:type]==0 %>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id %>
  <% end %>
  </div>

  <div>
  <% if (session[:type]==0 ) || ((@x==1) && session[:type]==2)%>
    <%= form.label :item_id, style: "display: block" %>
    <%= form.text_field :item_id %>
  <% end %>
  </div>

  <div>
  <% if session[:type]==0 || session[:type]==2 %>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  <% end %>
  </div>

  <div>
  <% if session[:type]==0 || session[:type]==2 %>
    <%= form.label :stock, style: "display: block" %>
    <%= form.number_field :stock %>
  <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
